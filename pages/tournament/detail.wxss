/**detail.wxss**/
.tournament-header {
  position: relative;
  margin-bottom: 20rpx;
}

.tournament-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}

.tournament-info {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-top: -60rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tournament-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.tournament-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.tournament-organizer {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.tournament-sponsors {
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.sponsor-name {
  color: #ff9800;
  margin-right: 10rpx;
}

.report-btn {
  font-size: 24rpx;
  color: #f44336;
  margin-left: auto;
}

.tab-nav {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

.tab-content {
  padding-bottom: 150rpx; /* 为底部按钮留出空间 */
}

.section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding-left: 16rpx;
  border-left: 6rpx solid #4CAF50;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: 500;
}

.rich-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.reward-item {
  margin-bottom: 16rpx;
}

.reward-rank {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 8rpx;
}

.reward-content {
  font-size: 26rpx;
  color: #666;
  padding-left: 20rpx;
}

.player-list {
  margin-top: 16rpx;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.player-item:last-child {
  border-bottom: none;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.player-rank {
  font-size: 24rpx;
  color: #999;
}

.player-status {
  margin-left: 16rpx;
}

.schedule-date {
  margin-bottom: 20rpx;
}

.date-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  background-color: #f5f5f5;
  padding: 10rpx 16rpx;
  border-radius: 4rpx;
}

.match-item {
  display: flex;
  padding: 16rpx;
  margin-bottom: 16rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.match-time, .match-court {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.match-vs {
  display: flex;
  align-items: center;
  flex: 1;
}

.player-a, .player-b {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.vs {
  font-size: 24rpx;
  color: #999;
  margin: 0 16rpx;
}

.match-status {
  margin-left: 16rpx;
}

.venue-map {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.venue-map map {
  width: 100%;
  height: 100%;
}

.venue-info {
  padding: 16rpx;
}

.venue-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.venue-address, .venue-contact {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}

.footer-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.btn-share {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding: 0;
  line-height: 1.5;
  width: 140rpx;
  font-size: 24rpx;
  color: #666;
}

.btn-share::after {
  border: none;
}

.btn-share image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.btn-register {
  flex: 1;
  margin-left: 20rpx;
}

.btn-secondary {
  flex: 1;
  margin-left: 20rpx;
} 