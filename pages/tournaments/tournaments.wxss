/**tournaments.wxss**/

.search-bar {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
}

.search-input {
    flex: 1;
    background-color: #f5f5f5;
    border-radius: 30rpx;
    padding: 10rpx 30rpx;
    font-size: 28rpx;
}

.filter-btn {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.filter-btn image {
    width: 40rpx;
    height: 40rpx;
}

.filter-tags {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20rpx;
}

.filter-tag {
    background-color: #E8F5E9;
    color: #4CAF50;
    font-size: 24rpx;
    padding: 6rpx 20rpx;
    border-radius: 30rpx;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
}

.tag-close {
    margin-left: 8rpx;
    font-size: 28rpx;
}

.tournament-list {
    padding-bottom: 100rpx;
}

.tournament-card {
    display: flex;
    background-color: #fff;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 20rpx;
    overflow: hidden;
}

.tournament-image {
    width: 240rpx;
    height: 180rpx;
    flex-shrink: 0;
}

.tournament-info {
    flex: 1;
    padding: 16rpx;
    position: relative;
}

.tournament-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
    color: #333;
}

.tournament-sponsor {
    font-size: 24rpx;
    color: #ff9800;
    margin-bottom: 8rpx;
}

.tournament-location,
.tournament-time {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 8rpx;
}

.icon-small {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
}

.tournament-status {
    position: absolute;
    right: 16rpx;
    bottom: 16rpx;
}

.empty-tip {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.empty-tip image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}

.empty-tip text {
    color: #999;
    font-size: 28rpx;
}

.filter-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
}

.filter-modal {
    width: 85%;
    background-color: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    max-height: 80vh;
    overflow-y: auto;
}

.filter-section {
    margin-bottom: 30rpx;
}

.filter-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
}

.filter-options {
    display: flex;
    flex-wrap: wrap;
}

.filter-option {
    padding: 10rpx 30rpx;
    background-color: #f5f5f5;
    border-radius: 30rpx;
    margin-right: 20rpx;
    margin-bottom: 16rpx;
    font-size: 26rpx;
    color: #666;
}

.filter-option.active {
    background-color: #4CAF50;
    color: #fff;
}

.filter-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}

.filter-actions button {
    width: 45%;
}

.float-btn {
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: #4CAF50;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.3);
    z-index: 50;
}

.float-btn image {
    width: 50rpx;
    height: 50rpx;
}